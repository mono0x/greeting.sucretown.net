%article
  %h1= schedule.date.strftime('%m/%d のグリーティング')

  - unless in_session.empty?
    %section
      %h1 開催中のグリーティング
      != haml :'_partial/greetings', layout: false, locals: { greetings: in_session }

  - unless before_the_start.empty?
    %section
      %h1 開始前のグリーティング
      != haml :'_partial/greetings', layout: false, locals: { greetings: before_the_start }

  - unless after_the_end.empty?
    %section
      %h1 終了したグリーティング
      != haml :'_partial/greetings', layout: false, locals: { greetings: after_the_end }
